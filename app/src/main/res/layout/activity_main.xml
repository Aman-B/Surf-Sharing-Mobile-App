<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context="com.surf_sharing.surfsharingmobileapp.MainActivity">

    <Button
        android:text="View Lifts"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:onClick="ViewLifts" />

    <Button
        android:id="@+id/button4"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:onClick="CreateLifts"
        android:text="Create Lift" />

    <Button
        android:id="@+id/navDrawerButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Nav Drawer" />


</LinearLayout>
